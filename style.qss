QWidget#mainWindow
{
	background-color: #1e1e1e;
}

QScrollArea {
    background: #1e1e1e;
}

QScrollBar:horizontal {
    border: 2px solid grey;
    background: #1e1e1e;
    height: 15px;
    margin: 0px 20px 0 20px;
}
QScrollBar::handle:horizontal {
    background: 007acc;
    min-width: 40px;
}
QScrollBar::add-line:horizontal {
    border: 2px solid grey;
    background: #007acc;
    width: 20px;
    subcontrol-position: right;
    subcontrol-origin: margin;
}
QScrollBar::sub-line:horizontal {
    border: 2px solid grey;
    background: #007acc;
    width: 20px;
    subcontrol-position: left;
    subcontrol-origin: margin;
}



QSlider#videoLength::groove:horizontal {
	border: 1px solid #bbb;
	background: soild-gray;
	height: 10px;
	border-radius: 4px;
}

QSlider#videoLength::sub-page:horizontal {
	background: #007acc;
	border: 1px solid #777;
	height: 10px;
	border-radius: 4px;
}

QSlider#videoLength::add-page:horizontal {
	background: #fff;
	border: 1px solid #777;
	height: 10px;
	border-radius: 4px;
}

QSlider#videoLength::handle:horizontal {
	background: soild-gray;
	border: 1px solid #777;
	width: 30px;
	margin-top: -2px;
	margin-bottom: -2px;
	border-radius: 4px;
}

QSlider#videoLength::handle:horizontal:hover {
	background: white;
	border: 1px solid #444;
	border-radius: 4px;
}



